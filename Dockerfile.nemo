# BEND/Dockerfile.nemo
FROM python:3.13-slim

WORKDIR /app

# Install build-essential which contains the g++ compiler needed by the 'annoy' package.
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

RUN python -m pip install --no-cache-dir --break-system-packages "nemoguardrails[server]"

COPY guardrails/config ./config

EXPOSE 8000

CMD ["nemoguardrails", "server", "--config=./config.co"]